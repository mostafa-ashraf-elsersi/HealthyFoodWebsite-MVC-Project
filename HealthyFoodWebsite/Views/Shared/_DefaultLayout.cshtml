<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>HealthyFood - Organic Food Website</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/img/tomato-icon.png" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Lora:wght@600;700&display=swap" rel="stylesheet" />

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Layout Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    <header>
        <!-- Navbar Start -->
        <div class="container-fluid fixed-top px-0 wow fadeIn" data-wow-delay="0.1s">
            <div class="top-bar row gx-0 align-items-center d-none d-lg-flex">
                <div class="col-lg-8 px-5 text-start">
                    <small><i class="fa fa-map-marker-alt me-2"></i>Tanta, Gharbyia, Egypt</small>
                    <a href="mailto:mostafaashrafelsersi@gmail.com"><small class="ms-4"><i class="fa fa-envelope me-2"></i>mostafaashrafelsersi@gmail.com</small></a>
                    <a href="tel:+201550012835"><small class="ms-4"><i class="fa fa-mobile me-2"></i>01550012835</small></a>
                </div>
                <div class="col-lg-4 px-5 text-end">
                    <small>Follow me:</small>
                    <a class="text-body ms-3" href="https://www.facebook.com/profile.php?id=100091729882218" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    <a class="text-body ms-3" href="https://www.linkedin.com/in/mostafa-ashraf-elsersi" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <nav class="navbar navbar-expand-lg navbar-light py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <a href="#" class="navbar-brand ms-4 ms-lg-0">
                    <h1 class="fw-bold text-primary m-0">Healthy<span class="text-secondary">Food</span></h1>
                </a>
                <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto p-4 p-lg-0">
                        <a asp-controller="Home" asp-action="GetView" class="nav-item nav-link active">Home</a>
                        <a asp-controller="Order" asp-action="GetUserOrders" class="nav-item nav-link">Customers Orders</a>
                        <a asp-controller="Product" asp-action="Insert" class="nav-item nav-link">Add Product</a>
                        <a asp-controller="Product" asp-action="GetAll" class="nav-item nav-link">Products</a>
                        <a asp-controller="ContactUs" asp-action="GetAll" class="nav-item nav-link">Messages</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu m-0">
                                <a asp-controller="BlogPost" asp-action="ConfigureBlogPost" class="dropdown-item">Configure Blog Post</a>
                                <a asp-controller="BlogPost" asp-action="GetPages" asp-route-pageIndex=0 class="dropdown-item">Blog Grid</a>
                                <a asp-controller="Testimonial" asp-action="GetView" class="dropdown-item">Add Testimonial</a>
                                <a asp-controller="Testimonial" asp-action="GetUserTestimonials" class="dropdown-item">My Testimonials</a>
                            </div>
                        </div>
                        <a asp-controller="AboutUs" asp-action="GetAboutUsView" class="nav-item nav-link">About Us</a>
                        <a asp-controller="ContactUs" asp-action="Insert" class="nav-item nav-link">Contact Us</a>
                    </div>
                    <div class="d-none d-lg-flex ms-2">
                        <!-- Dropdown Menu -->
                        <div class="nav-item dropdown">
                            <a class="btn-sm-square border border-dark bg-white rounded-circle ms-3" style="cursor:pointer" data-bs-toggle="dropdown" aria-expanded="false">
                                <small class="fa fa-user text-body"></small>
                            </a>
                            <ul class="dropdown-menu mt-4 p-0" style="position: absolute; right: -80px;">
                                <li><a class="dropdown-item" asp-controller="Logger" asp-action="Login">Log in</a></li>
                                <li><a class="dropdown-item" asp-controller="Logger" asp-action="Register">Register</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Edit Profile</a></li>
                            </ul>
                        </div>
                        <!-- Shopping Bag Link-->
                        <a class="btn-sm-square border border-dark bg-white rounded-circle ms-3" asp-controller="ShoppingBag" asp-action="GetUserActiveShoppingBagItems">
                            <small class="fa fa-shopping-bag text-body"></small>
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Navbar End -->
    </header>

    <div>
        @RenderBody()
    </div>
    
    <footer>
        <!-- Footer Start -->
        <div class="container-fluid bg-dark footer pt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-6">
                    <div class="col-lg-3 col-md-6">
                        <h1 class="fw-bold text-primary mb-4">Healthy<span class="text-secondary">Food</span></h1>
                        <p>A website to buy fresh fruits and vegetables from, with affordable prices.</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-square btn-outline-light rounded-circle me-1" href="https://www.facebook.com/profile.php?id=100091729882218" target="_blank"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-square btn-outline-light rounded-circle ms-2" href="https://www.linkedin.com/in/mostafa-ashraf-elsersi" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="text-light mb-4">Address</h4>
                        <p><i class="fa fa-map-marker-alt me-3"></i>Tanta, Gharbyia, Egypt</p>
                        <p><a href="tel:+201550012835"><i class="fa fa-phone-alt me-3"></i>01550012835</a></p>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="text-light mb-4">Quick Links</h4>
                        <a class="btn btn-link" asp-controller="AboutUs" asp-action="GetAboutUsView">About Us</a>
                        <a class="btn btn-link" asp-controller="ContactUs" asp-action="GetContactUsView">Contact Us</a>
                        <a class="btn btn-link" href="">Privacy Policy</a>
                        <a class="btn btn-link" href="">Terms & Conditions</a>
                        <a class="btn btn-link" href="">FAQs</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="text-light mb-4">Blog Posts Letter</h4>
                        <p>Subscribe in my blog posts letter service to get notifications considering latest published posts.</p>
                        <form asp-controller="BlogSubscriber" asp-action="Insert" method="post">
                            <div class="position-relative mx-auto d-flex justify-content-start" style="max-width: 400px;">
                                <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" placeholder="Your Email" name="EmailAddress" />
                                <button type="submit" class="btn btn-primary py-2 ms-2">Subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="container-fluid copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy;2023 <a href="#">HealthyFood</a> - All Right Reserved.
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                            Designed By: <a href="https://htmlcodex.com">HTML Codex</a> | Distributed By: <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
    </footer>
     
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    @*<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Layout Javascript -->
    <script src="~/js/main.js"></script>

    <!-- SignalR Client-Side Library-->
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    @await RenderSectionAsync("ShoppingBagScript", required: false)
    @await RenderSectionAsync("OrderScript", required: false)

    <!-- Rendered Body JavaScript-->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
