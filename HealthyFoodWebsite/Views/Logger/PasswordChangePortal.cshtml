
@model LoggerCredentialsParameters

<!-- Page Header Start -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Password Change Portal</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Home" asp-action="GetHomeView">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Password Change Portal</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Login Form Start -->
<div class="container-fluid bg-light bg-icon py-6 mb-0">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <div class="text-start">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-5">Confirm Your Identity</h5>
                        <form asp-controller="Logger" asp-action="PasswordChangePage">
                            <div class="form-floating mb-5">
                                <input asp-for="Password" class="form-control" placeholder="">
                                <label asp-for="Password">Current Password</label>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="d-flex justify-content-evenly">
                                <button type="submit" class="btn btn-primary">Proceed</button>
                                <button type="reset" class="btn btn-secondary">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login Form End -->
