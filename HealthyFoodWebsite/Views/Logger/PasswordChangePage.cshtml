
@model Logger

<!-- Password-Changing Alert -->
@if (ViewBag.PasswordChanged == 0)
{
    <div id="password-alert" class="alert alert-dismissible fixed-bottom bg-secondary" style="margin-left: 10px; max-width: 300px; z-index: 100;">
        <button type="button" class="btn-close" onclick="closePasswordAlert()"></button>
        <span style="color: white; text-align: justify;">Error occurred! Try again!</span>
    </div>
}
<!-- Password-Changing Alert -->

<!-- Page Header Start -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Password Change Page</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Home" asp-action="GetView">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Password Change Page</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Login Form Start -->
<div class="container-fluid bg-light bg-icon py-6 mb-0">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <div class="text-start">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-5">Write A New Password</h5>
                        <form asp-action="OverwriteOldPasswordWithNewOne">
                            <div class="form-floating mb-5">
                                <input asp-for="Password" class="form-control" placeholder="">
                                <label asp-for="Password">Enter New Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-5">
                                <input asp-for="ConfirmingPassword" class="form-control" placeholder="">
                                <label asp-for="ConfirmingPassword">Confirm New Password</label>
                                <span asp-validation-for="ConfirmingPassword" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-evenly">
                                <button type="submit" class="btn btn-primary">Proceed</button>
                                <button type="reset" class="btn btn-secondary">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login Form End -->

@section Scripts {
    <script>
        function closePasswordAlert() {
            let alertDiv = document.getElementById("password-alert");
            alertDiv.classList.add(["d-none"]);
        }
    </script>
}