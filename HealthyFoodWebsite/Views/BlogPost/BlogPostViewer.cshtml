
@model BlogPost

<!-- Page Header Start -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Blog Post Viewer</h1>
    </div>
</div>
<!-- Page Header End -->
<!-- Feature Start -->
<div class="container-fluid bg-light bg-icon py-6 mb-0">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 1000px;">
            <div>
                <h1 class="display-5">Post Content</h1>
            </div>
            <br />
            <div class="text-center row">
                <img src=@Model.PosterUri alt="A blog post poster." class="rounded mb-3 mx-auto" style="width: 50%;"/>
                <div class="d-flex justify-content-between text-muted border-bottom mb-3 pb-3">
                    <small class="me-3"><i class="fa fa-user text-primary me-2"></i>@Model.AuthorType</small>
                    <small class="me-3"><i class="fa fa-calendar text-primary me-2"></i>@Model.PublishingDate</small>
                </div>
                <div class="text-start">
                    <h4>@Model.Title</h4>
                </div>
                <textarea class="form-control cols-sm-6" style="resize: none;" readonly>@Model.Content</textarea>
            </div>
        </div>
    </div>
</div>
<!-- Feature End -->
