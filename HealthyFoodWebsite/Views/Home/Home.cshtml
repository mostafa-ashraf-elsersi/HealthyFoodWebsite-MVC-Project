<!-- Blog Start -->
<div class="container-xxl py-5 mb-5">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">Latest Blog Posts</h1>
            <p>Check our latest posts on the website</p>
        </div>
        <div class="row g-4">
            @{
                List<BlogPost> posts = ViewBag.LastThreePosts;

                foreach(var post in posts)
                {
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                        <img class="img-fluid" src="@post.PosterUri" alt="">
                        <div class="bg-light p-4">
                            <a class="d-block h5 lh-base mb-4" asp-controller="BlogPost" asp-action="GetBlogPost" asp-route-postId="@post.Id">@post.Title</a>
                            <div class="d-flex justify-content-between text-muted border-top pt-4">
                                <small class="me-3"><i class="fa fa-user text-primary me-2"></i>@post.AuthorType</small>
                                <small class="me-3"><i class="fa fa-calendar text-primary me-2"></i>@post.PublishingDate</small>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
<!-- Blog End -->

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const ratingStarsContainers = document.getElementsByClassName("rating-stars-containers");
        if (ratingStarsContainers != null) {
            Array.from(ratingStarsContainers).forEach(container => {
                const containerRatingValue = Number(container.children[0].textContent);
                for (let i = 1; i <= containerRatingValue; i++) {
                    container.children[i].classList.add(["checked"]);
                }
                Array.from(container.children).forEach(span => {
                    span.classList.remove(["invisible"]);
                });
            });
        }
    });
</script>