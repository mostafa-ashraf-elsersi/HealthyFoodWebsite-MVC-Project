@model Testimonial

<style>
    body {
        background-color: #eee;
    }

    div.stars {
        width: 270px;
        display: inline-block;
    }

    .mt-200 {
        margin-top: 200px;
    }

    input.star {
        display: none;
    }

    label.star {
        float: right;
        padding: 10px;
        font-size: 36px;
        color: #4A148C;
        transition: all .2s;
    }

    input.star:checked ~ label.star:before {
        content: '\f005';
        color: #FD4;
        transition: all .25s;
    }

    input.star-5:checked ~ label.star:before {
        color: yellow;
        text-shadow: 0 0 20px #952;
    }

    input.star-1:checked ~ label.star:before {
        color: #F62;
    }

    label.star:hover {
        transform: rotate(-15deg) scale(1.3);
    }

    label.star:before {
        content: '\f005';
        color:burlywood;
        font-family: FontAwesome;
    }
</style>

<!-- Testimonial Alert -->
@if (ViewBag.TestimonialAdded == 0)
{
    <div id="testimonial-alert" class="alert alert-dismissible fixed-bottom bg-secondary" style="margin-left: 10px; max-width: 300px; z-index: 100;">
        <button type="button" class="btn-close" onclick="closeTestimonialAlert()"></button>
        <span style="color: white; text-align: justify;">Error! Try again!</span>
    </div>
}
<!-- Testimonial Alert -->

<!-- Page Header Start -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container d-none d-md-block">
        <h1 class="display-3 mb-3 animated slideInDown">Testimonial Addtion</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Home" asp-action="GetView">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Add Testimonial</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Testimonial Start -->
<div class="container-fluid bg-light bg-icon py-6">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 1000px;">
            <div>
                <h1 class="display-5">Add Testimonial</h1>
            </div>
            <br />
            <div class="text-center row">
                <form asp-action="Insert" method="post">
                    <div class="col-md-12 mb-3">
                        <div class="ms-2 fw-bold fs-5">Rate Us</div>
                        <div class="stars">
                            <input type="radio" class="star star-5" id="star-5" name="RatingValue" value="5" />
                            <label class="star star-5" for="star-5"></label>

                            <input type="radio" class="star star-4" id="star-4" name="RatingValue" value="4" />
                            <label class="star star-4" for="star-4"></label>

                            <input type="radio" class="star star-3" id="star-3" name="RatingValue" value="3" />
                            <label class="star star-3" for="star-3"></label>

                            <input type="radio" class="star star-2" id="star-2" name="RatingValue" value="2" />
                            <label class="star star-2" for="star-2"></label>

                            <input type="radio" class="star star-1" id="star-1" name="RatingValue" value="1" />
                            <label class="star star-1" for="star-1"></label>
                        </div>
                        <div>
                            <span asp-validation-for="RatingValue" class="text-danger"></span>
                        </div>
                    </div>
 
                    <div class="form-floating mb-4 text-start">
                        <textarea asp-for=Content class="form-control" placeholder="" style="height: 200px"></textarea>
                        <label asp-for=Content>Testimonial Content</label>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-evenly">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <button type="reset" class="btn btn-danger">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial End -->

@section Scripts {
    <script>
        function closeTestimonialAlert() {
            let alertDiv = document.getElementById("testimonial-alert");
            alertDiv.classList.add(["d-none"]);
        }
    </script>
}